<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="FormulaTextEditStyle" parent="@style/Widget.AppCompat.EditText">
        <!-- This style is re-declared in values-v12 in order to define cursor properties. -->
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:maxLines">1</item>
        <item name="android:autoText">false</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:privateImeOptions">nm</item>
        <item name="android:textColor">@color/formula_text_color</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/formula_filled_border</item>
        <item name="android:textColorHighlight">@color/formula_selected_term_color</item>
        <item name="android:textCursorDrawable">@drawable/cursor_drawable</item>
    </style>
    
    <style name="DialogTextEditStyle" parent="@style/Widget.AppCompat.EditText">
        <!-- Re-declaration of style from values in order to define cursor properties. -->
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:maxLines">1</item>
        <item name="android:autoText">false</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:imeOptions">flagNoExtractUi</item>  
        <item name="android:privateImeOptions">nm</item>
        <item name="android:background">@drawable/edit_text_border</item>
        <item name="android:textColor">@color/dialog_content_color</item>
        <item name="android:textSize">@dimen/dialog_content_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">normal</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textCursorDrawable">@drawable/cursor_drawable</item>
    </style>

</resources>
